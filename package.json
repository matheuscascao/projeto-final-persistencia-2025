{
  "name": "tourism-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "bun --cwd apps/api run dev",
    "dev:web": "bun --cwd apps/web run dev",
    "dev": "bun run dev:api & bun run dev:web",
    "build": "bun --cwd apps/api run build && bun --cwd apps/web run build",
    "lint": "echo \"No root linter configured\""
  },
  "devDependencies": {
    "bun-types": "^1.3.3",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.6.0"
  }
}
